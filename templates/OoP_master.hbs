<mjml>
  <mj-head>
    <mj-title>
      {{template.masthead}}
    </mj-title>
    <mj-attributes>
      <mj-text padding="0" font-size="12px" font-family="Georgia, Times, serif" />
      <mj-class name="salutation" align="left" color="#000000" font-family="Georgia, Times, serif" font-weight="400" font-size="20px" line-height="36px" />
    </mj-attributes>
  </mj-head>
  <mj-body>
    <mj-container background-color="#3c3c3c">

      <mj-section>
        <mj-column vertical-align="middle">
          <mj-text align="center" font-size="11" padding-bottom="0" padding-top="0">
            <span style="font-size: 11px;text-align:center;align:center;"><a href="%%view_email_url%%" style="text-decoration: none; color: #e6e6e6; font-family: Georgia, Arial;">
              &nbsp;View this email in your browser
            </a></span>
          </mj-text>
        </mj-column>
      </mj-section>

      <mj-section background-color="#004b9d" vertical-align="middle" padding-bottom="0" padding-top="0">
        <mj-column vertical-align="middle">
          <mj-text align="center" color="#004b9d" font-family="Verdana, Arial, sans-serif" font-weight="400" font-size="12px">
            &nbsp;<br />
          </mj-text>
        </mj-column>
      </mj-section>

      <mj-section vertical-align="middle" padding="80px 0px 30px" background-color="#ffffff">
        <mj-column vertical-align="middle">
          <mj-image src="http://image.ucm-email.chaminade.edu/lib/fe9213727d65047e7d/m/1/3fba0d4e-53f5-4ce3-93a3-760368f059b6.jpg" align="center" width="150px" padding="0" alt="Chaminade University" title="Chaminade University">
          </mj-image>
        </mj-column>
      </mj-section>

      <mj-section padding="0px" background-color="#ffffff">
        <mj-column>
          <mj-divider width="200px" padding="0px 50px" border-style="solid" border-width="2px" border-color="#ededed" container-background-color="#ffffff" />
        </mj-column>
      </mj-section>

      <mj-section vertical-align="middle" padding="25px 50px 70px" background-color="#ffffff">
        <mj-column width="500px">
          <mj-text align="left" font-family="Arial, Verdana, sans-serif" font-weight="400" font-size="10pt" line-height="24px" color="#047294" padding="0">
            Aloha Governors and Regents:
